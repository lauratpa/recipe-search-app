<div class="flex flex-col">
  <div class="">
    <h1 class="font-bold text-xl text-gray-900">
      <%= recipe.title %> <%= recipe.rating %>
    </h2>

    <div class="grid grid-cols-2">
      <img
        alt="<%= recipe.title %>"
        src="<%= recipe.image_url %>"
        class="w-48 h-48 object-cover"
        >

      <div class="flex flex-col text-right">
        <div>Prep time: <%= recipe.prep_time %> min</div>
        <div>Cooking time: <%= recipe.cook_time %> min</div>
        <div>Author: <%= recipe.author %></div>
        <div>Category: <%= recipe.category.name %></div>
      </div>
    </div>

    <div class="flex flex-col text-gray-700">
      <% recipe.details.each do |detail| %>
        <div class="text-xs border rounded-md px-2 py-1">
          <%= detail %>
        </div>
      <% end %>
    </div>
  </div>
</div>
